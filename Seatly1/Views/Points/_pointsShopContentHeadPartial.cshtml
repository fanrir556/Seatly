<script>
    $(function () {
        var parameters = {
            cate: strCate,
            pgNum: 1,
            pgSize: 10
        };
        $.ajax({
            type: "GET",
            url: `@Url.Action("pointsShopContentBody", "Points")`,
            data: parameters
        }).done(function (data) {
            $("#pointsContentBody").html(data);
        }).fail(function (err) {
            alert(err.responseText);
        });

        $(".btn-cate").on("click", function () {
            sessionStorage.setItem('strCate', $(this).data("cate"));
            // strCate = sessionStorage.getItem('strCate');
            // parameters.cate = strCate;
            // parameters.pgNum = $("#pgNum").val();
            // parameters.pgSize = $("#pgSize").val();
            $("#pgNum").val(1);
            $("#pgNum").trigger("change");
            // $.ajax({
            //     type: "GET",
            //     url: `@Url.Action("pointsShopContentBody", "Points")`,
            //     data: parameters
            // }).done(function (data) {
            //     $("#pointsContentBody").html(data);
            // }).fail(function (err) {
            //     alert(err.responseText);
            // });
        });

        $("#pgNum").on("change", function () {
            var pgNumint = parseInt($(this).val());
            if (!isNaN(pgNumint) && pgNumint > 0 && pgNumint <= $("#pgTotal").text()) {
                strCate = sessionStorage.getItem('strCate');
                parameters.cate = strCate;
                parameters.pgNum = $(this).val();
                parameters.pgSize = $("#pgSize").val();
                $.ajax({
                    type: "GET",
                    url: `@Url.Action("pointsShopContentBody", "Points")`,
                    data: parameters
                }).done(function (data) {
                    $("#pointsContentBody").html(data);
                }).fail(function (err) {
                    alert(err.responseText);
                });
            }
            else { 
                alert("請輸入正確的頁碼");
            }
        });

        $("#pgSize").on("change", function () {
            if ($("#pgNum").val() != 1) {
                $("#pgNum").val(1);
                $("#pgNum").trigger("change");
            }
            else {
            strCate = sessionStorage.getItem('strCate');
            parameters.cate = strCate;
            parameters.pgNum = $("#pgNum").val();
            parameters.pgSize = $("#pgSize").val();
            $("#pgNum").val(1);
            $.ajax({
                type: "GET",
                url: `@Url.Action("pointsShopContentBody", "Points")`,
                data: parameters
            }).done(function (data) {
                $("#pointsContentBody").html(data);
            }).fail(function (err) {
                alert(err.responseText);
            });
        });

        $("#pP").on("click", function () {
            if ($("#pgNum").val() > 1) {
                $("#pgNum").val($("#pgNum").val() - 1);
                $("#pgNum").trigger("change");
            }
        });

        $("#nP").on("click", function () {
            if ($("#pgNum").val() < $("#pgTotal").text()) {
                var pgNum = parseInt($("#pgNum").val());
                $("#pgNum").val(pgNum + 1);
                $("#pgNum").trigger("change");
            }
        });
    });

</script>