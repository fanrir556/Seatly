@model NotificationRecord

@if (Model != null && Model.ActivityPhoto != null)
{
    <img src="@Url.Action("GetActivityPhoto","NotificationRecord",new {id=Model.ActivityId})" title="@Model.ActivityName" style="height:240px;width:320px;" class="md-5" />
}

else
{
    <img src="@Url.Content("~/images/NoImage.jpg")" title="NoImage" style="height:240px;width:320px" />
}