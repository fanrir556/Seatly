    </div>
</div>



    <script>
        function previewImage(inputFile, img) {
            if (inputFile.files && inputFile.files[0]) {
                var file = inputFile.files[0];
                var allowType = "image.*";
                if (file.type.match(allowType)) {
                    //預覽
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        img.attr("src", e.target.result);
                        img.attr("title", inputFile.files[0].name);
                    };
                    reader.readAsDataURL(inputFile.files[0]);
                    $(".btn").prop("disabled", false);
                }
                else {
                    alert("不支援檔案類型");
                    $(".btn").prop("disabled", true);
                }
            }
        }

        $("#ActivityPhoto").change(function () {
            previewImage(this, $("#ActivityPhoto").prev());
        });


        $("#Editt").click(function (e) {
            e.preventDefault(); // 防止表單的默認提交行為
        var formData = new FormData($("#fform")[0]);
            // 發送 AJAX 請求
             // alert(formData)
            $.ajax({
                type: "POST",
                url: `/NotificationRecord/Edit`, // 如果路徑正確，則可以直接指定URL
                data: formData, // 將序列化後的表單數據發送到服務器
                contentType: false, // 不設置 contentType，讓 jQuery 自動設置為 multipart/form-data
                processData: false, // 不處理數據，讓 jQuery 不將數據轉為字串
                cache: false,
                success: function (data) {
                    Load();
                },
                error: function (xhr, status, error) {
                    // 請求失敗時的處理
                    console.error(xhr.responseText);
                }
            });
        });


        $("#check").click(function () {
            // 從事件對象(event object)中取得觸發事件的按鈕元素
            const btn = event.target;
            // 從按鈕元素中取得自定義屬性"btn-id"
            const btnId = btn.getAttribute("btn-id");
            // alert(btnId)
            sessionStorage.removeItem("ActID");
            sessionStorage.setItem("ActID", btnId);
            // alert("check")
            $.ajax({
                type: "GET",
            url: `@Url.Action("_Check", "Admin")`
            }).done(function (data) {
                $("#adminBody").html(data);
                $("#dancingtime").hide();
                console.log("cc")
            }).fail(function (err) {
                alert(err.responseText);
                $("#dancingtime").hide();
            });
        })


        function Load() {
            $("#dancingtime").show();
            $.ajax({
                type: "GET",
                url: `@Url.Action("_NotificationRecord", "Admin")`
            }).done(function (data) {
                $("#adminBody").html(data);
                $("#dancingtime").hide();
                
            }).fail(function (err) {
                alert(err.responseText);
                $("#dancingtime").hide();
            });
        }

       

</script>



