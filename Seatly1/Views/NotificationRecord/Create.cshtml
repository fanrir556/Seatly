            type: "POST",
            url: `/NotificationRecord/Create`, // 如果路徑正確，則可以直接指定URL
            data: formData, // 將序列化後的表單數據發送到服務器
            contentType: false, // 不設置 contentType，讓 jQuery 自動設置為 multipart/form-data
            processData: false, // 不處理數據，讓 jQuery 不將數據轉為字串
            success: function (data) {
                $("#adminBody").html(data);
            },
            error: function (xhr, status, error) {
                // 請求失敗時的處理
                console.error(xhr.responseText);
            }
        });
    });








