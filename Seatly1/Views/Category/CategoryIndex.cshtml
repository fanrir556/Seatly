                        <p class="card-text mb-5">
                            <span  v-for="i in 5">
                                <span v-if="activity['hashTag'+i]">#<span class="hash-tag">{{ activity['hashTag'+i] }}</span></span>
                            </span>
                        </p>
                        <div><a :href="'/NotificationRecord/UsersView/' + activity.activityId" class="btn btn-primary position-absolute bottom-0 end-0 mb-2 me-2">查看詳情</a></div>
                    </div>
                </div>
