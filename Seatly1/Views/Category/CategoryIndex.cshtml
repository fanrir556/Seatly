    </section>
    @* 台南 *@
    <section v-else-if="cate == 'tainan'" style="width: 65rem;">
        <h3>台南</h3>
        <div class="row">
            <div class="col-md-4" v-for="activity in sortedActivities" :key="activity.ActivityId">
                <div class="card">
