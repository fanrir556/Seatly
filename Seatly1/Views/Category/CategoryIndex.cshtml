    <button class="btn btn-secondary m-2" v-on:click="changeCategory('american')">查看美式</button>
    <button class="btn btn-secondary m-2" v-on:click="changeCategory('italian')">查看義式</button>
    <button class="btn btn-secondary m-2" v-on:click="changeCategory('korean')">查看韓式</button>
    <hr />

    <div id="filiter">
        <p> 目前選擇:
            <span id="chooseItem" v-for="item,key in choose">
                {{item}}
                <i v-on:click="removeHandle(key)">x</i>
            </span>
        </p>
        <ul>
            <li v-for="item,index in dataList">
                {{item.title}}
                <span v-for="option,i in item.list" v-on:click="addChooseHandle(option,index,i)" :class="{red: item.index === i}">{{option}}</span>
            </li>
        </ul>
    </div>

    <!-- 排序按钮 -->
    <div class="btn-group" role="group" aria-label="Sort Activities">
        <button type="button" class="btn btn-secondary" v-on:click="toggleSortOrder">目前排序: 依時間{{ sortBy === 'asc' ? '正序' : '倒序' }}</button>
    </div>


