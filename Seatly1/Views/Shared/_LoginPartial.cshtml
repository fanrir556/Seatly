@using Microsoft.AspNetCore.Identity
@* @using Seatly1.Data *@
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <div style="display: flex;">
        <li class="nav-item text-gradient style="justify-content">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="點擊進入會員中心">Hi!@User.Identity?.Name</a>
        </li>
        
        
        <li class="nav-item text-gradient" style="justify-content">
            <form class="form-inline"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark" onclick="sessionStorage.removeItem('trans')">Logout</button>
        </form>
        </li>
    </div>
}
else
{
        <li class="nav-item text-gradient" >
            <a class="nav-link text-dark" style="display: inline-block;" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
        <li class="nav-item text-gradient" >
            <a class="nav-link text-dark" style="display: inline-block;" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

<div class="d-none" id="isLogin">
    @if (SignInManager.IsSignedIn(User))
    {
        <span></span>
    }
    else
    {
        
    }
</div>