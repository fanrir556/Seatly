@model NotificationBookReader

@if (Model != null && Model.NotificationRecord.ActivityPhoto != null)
{
    <img src="@Url.Action("GetActivityPhoto","NotificationRecord",new {id=Model.NotificationRecord.ActivityId})" title="@Model.NotificationRecord.ActivityName" style="height:240px;width:320px" />
}

else
{
    <img src="@Url.Content("~/images/NoImage.jpg")" title="NoImage" style="height:240px;width:320px" />
}