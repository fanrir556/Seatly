@model IEnumerable<Seatly1.Models.NotificationRecord>

@{
    ViewData["Title"] = "Index";
}
<div id="adminBody">
    <img id="dancingtime" src="~/images/dancingtime.gif" style="display:none;" />
    <h1>Index</h1>

    <p>
        <a id="NotificationRecord_Create">Create New</a>
    </p>
    <table class="table w-100">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ActivityId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActivityPhoto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActivityName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DescriptionN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsRecurring)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecurringTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivityId)
                    </td>
                    <td>
                        <partial name="NotificationRecord/_ShowActivityPhoto" model="@item" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescriptionN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRecurring)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecurringTime)
                    </td>
                    <td>
                        <a class="Edit" asp-controller="NotificationRecord" asp-action="Edit" asp-route-id="@item.ActivityId">Edit</a> |
                        <a class="NotificationRecord_details" data-id="@item.ActivityId">Details</a>|
                        <a class="Delete" asp-controller="NotificationRecord" asp-action="Delete" asp-route-id="@item.ActivityId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {

    <script>


    </script>


}
