@{
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div id="app">
    <section class="py-8 overflow-hidden">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-8 offset-md-2">
                    <div class="card">
                        <h5 class="card-header">活動資訊</h5>
                        <img :src="ActivityPhoto" src="~/images/NoImage.jpg" class="card-img-top img-fluid" alt="NoImage">
                        <div class="card-body">
                            <h4 class="card-title">{{ActivityName}}</h4>
                            <p class="card-text"><i class="bi bi-alarm"></i> {{StartTime}} - {{EndTime}}</p>
                            <h5 class="card-title">活動方法</h5>
                            <p class="card-text">{{ActivityMethod}}</p>
                            <h5 class="card-title">活動描述</h5>
                            <p class="card-text">{{DescriptionN}}</p>
                            <h5 class="card-title">是否重複</h5>
                            <p class="card-text">{{IsRecurring}}</p>
                            <p class="card-text">#{{HashTag1}} #{{HashTag2}} #{{HashTag3}} #{{HashTag4}} #{{HashTag5}}</p>
                            <button @@click="edit" href="#" class="btn btn-secondary mx-auto">編輯</button> <button href="#" class="btn btn-primary">刪除</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://unpkg.com/vue@3.4.26/dist/vue.global.js"></script>
    <script src="https://unpkg.com/vue-router@4.3.2/dist/vue-router.global.js"></script>
    <script src="https://unpkg.com/axios@1.6.8/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/Activity.js"></script>
}