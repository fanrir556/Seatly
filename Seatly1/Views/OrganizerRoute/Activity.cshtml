<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>活動資訊</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <div id="app">
        <section class="py-8 overflow-hidden">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <h5 class="card-header">活動資訊</h5>
                            <img :src="ActivityPhoto" src="~/images/NoImage.jpg" class="card-img-top img-fluid" alt="NoImage">
                            <div class="card-body">
                                <h4 class="card-title">{{ActivityName}}</h4>
                                <p class="card-text"><i class="bi bi-info-circle"></i> 活動id： {{ActivityId}}</p>
                                <p class="card-text"><i class="bi bi-alarm"></i> 開始結束時間： {{StartTime}} ~ {{EndTime}}</p>
                                <h5 class="card-title">活動方法</h5>
                                <p class="card-text">{{ActivityMethod}}</p>
                                <h5 class="card-title">活動描述</h5>
                                <p v-html="DescriptionN"></p>
                                <h5 class="card-title">人數上限</h5>
                                <p class="card-text">{{Capacity}}</p>
                                <p class="card-text">#{{HashTag1}}  #{{HashTag2}}  #{{HashTag3}}  #{{HashTag4}}  #{{HashTag5}}</p>
                                <button @@click="edit" href="#" class="btn btn-secondary mx-auto">編輯</button> <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteActivityModal">刪除</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal fade" id="deleteActivityModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">刪除活動</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        確定要刪除活動?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                        <button type="button" class="btn btn-primary" @@click="deleteActivity">刪除</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="https://unpkg.com/vue@3.4.26/dist/vue.global.js"></script>
        <script src="https://unpkg.com/vue-router@4.3.2/dist/vue-router.global.js"></script>
        <script src="https://unpkg.com/axios@1.6.8/dist/axios.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="~/js/Activity.js"></script>
    }
</body>
</html>
