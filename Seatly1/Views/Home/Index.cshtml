        // 格式化日期的函數
        function formatDate(dateString) {
            console.log(dateString)
            var parts = dateString.split("-");
            var year = parts[0];
            var month = parts[1];
            var day = parts[2];
            var formattedDate = year + "/" + month + "/" + day;
            return formattedDate;
        }

