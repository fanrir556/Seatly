    <section class="py-4 overflow-hidden">
        <div class="container">
            <div class="row h-100">
                <div class="col-lg-7 mx-auto text-center mt-7 mb-5">
                    <h5 class="fw-bold fs-3 fs-lg-5 lh-sm">熱門活動</h5>
                </div>
                <div class="col-12">
                    @if (Model != null && Model.Any())
                    {
                        var chunks = Model.Select((item, index) => new { Item = item, Index = index })
                        .GroupBy(x => x.Index / 5)
                        .Select(g => g.Select(x => x.Item).ToList())
                        .ToList();

                        <div id="carouselPopularItems" class="carousel slide position-relative w-100" data-bs-touch="true" data-bs-interval="10000">
                            <div class="carousel-inner">
                                @for (int i = 0; i < chunks.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <div class="row gx-3 h-100 align-items-center">
                                            @foreach (var item in chunks[i])
                                            {
                                                <div class="col-sm-6 col-md-4 col-xl mb-5 h-100">
                                                    <div class="card card-span h-100 rounded-3">
                                                        
                                                        @if (item.ActivityPhoto != null){
                                                            var base64Image = Convert.ToBase64String(item.ActivityPhoto);
                                                            var imageSrc = $"data:image;base64,{base64Image}";
                                                        <img class="img-fluid rounded-3 h-100" src="@imageSrc" alt="ActivityPhoto" />
                                                        }
                                                        else
                                                        {
                                                            <span>No photo available</span>
                                                        }
                                                        
                                                        <div class="card-body ps-0">
                                                            <h5 class="fw-bold text-1000 text-truncate mb-1">@item.ActivityName</h5>
                                                            <div><span class="text-warning me-2"><i class="fas fa-map-marker-alt"></i></span><span class="text-primary">@item.Location</span></div>
                                                            @{
                                                                string formattedStartTime = string.Format("{0:yyyy-MM-dd}", item.StartTime);
                                                                string formattedEndTime = string.Format("{0:yyyy-MM-dd}", item.EndTime);
                                                            }
                                                            <span class="text-1000 fw-bold">@formattedStartTime ~ @formattedEndTime</span>
                                                            <p>
                                                                @for (int k = 1; k <= 5; k++)
                                                                {
                                                                    var tagName = "HashTag" + k;
                                                                    var tagValue = item.GetType().GetProperty(tagName)?.GetValue(item, null)?.ToString();
                                                                    if (!string.IsNullOrEmpty(tagValue) && tagValue != "HOT")
                                                                    {
                                                                        <span>#<span class="hash-tag">@tagValue</span></span>
                                                                    }
                                                                }
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <form asp-action="UsersView" asp-controller="NotificationRecord" asp-route-id="@item.ActivityId">
                                                    <div class="d-grid gap-2"><button class="btn btn-lg btn-danger" href="#!" role="button">Read more...</button></div>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselPopularItems" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselPopularItems" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    }
                    else
                    {
                        <p>No hot items found.</p>
                    }
                </div>
            </div>
        </div><!-- end of .container-->
